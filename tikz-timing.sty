\def\tikztiming@prefix{tikztiming@}

\def\tikztimingx{1.75ex}
\def\tikztimingy{1.75ex}
\def\tikztimingoptions{thick}

\def\texttiming#1{%
  \begingroup
    \def\lastchar{}%
    \setcounter{tikztimingchars}{0}%
    \let\currentchar\empty
    \let\tikztiming@str\empty
    \texttiming@#1\relax
    \begin{tikzpicture}
      [x=\tikztimingx,y=\tikztimingy,\tikztimingoptions]
      %\draw[step=50,very thin,color=gray] (0,0) grid (50*\value{tikztimingchars},100);
      \draw (0,0) \tikztiming@str;%
    \end{tikzpicture}
  \endgroup
}

\def\timing{
  \@ifnextchar{[}%
    {\timing@}%
    {\timing@[]}%
}

\def\timing@[#1]{%
  \@ifnextchar{+}%
    {\timing@@{#1}}%
    {\@ifnextchar{(}%
      {\timing@@{#1}}%
      {\timing@@{#1}(0,0)}%
    }%
}

\def\timing@@#1#2(#3){%
  \timing@@@{#1}{#2(#3)}%
}

\def\timing@@@#1#2#3{%
  \begingroup
    \def\lastchar{}%
    \setcounter{tikztimingchars}{0}%
    \let\currentchar\empty
    \let\tikztiming@str\empty
    \texttiming@#3\relax
    \draw [x=\tikztimingx,y=\tikztimingy,\tikztimingoptions,#1] #2 \tikztiming@str;%
    \ifnum\c@maxtikztimingchars<\c@tikztimingchars
      \global\c@maxtikztimingchars=\c@tikztimingchars
    \fi
  \endgroup
  \@ifnextchar{;}{\@gobble}{}%
}


\def\texttiming@#1{%
  \ifx\relax#1\empty
  \else
    \tikztiming@iflower{#1}%
      {\addtocounter{tikztimingchars}{+1}}%
      {\addtocounter{tikztimingchars}{+2}}%
    \def\currentchar{#1}%
    \edef\tikztiming@str{\tikztiming@str\csname \tikztiming@prefix\lastchar\currentchar\endcsname}%
    \let\lastchar\currentchar
    \expandafter
    \texttiming@
  \fi
}


\def\tikztiming@iflower#1{%
  \begingroup
  \edef\@tempa{`#1}%
  \ifnum\@tempa=\lccode\@tempa
    \endgroup
    \expandafter
    \@firstoftwo
  \else
    \endgroup
    \expandafter
    \@secondoftwo
  \fi
}

